{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "*": ["./*"]
        }
    },
    "include": ["src/**/*.ts", ".eslintrc.yml"],
    "exclude": [
        "../node_modules/",
        "node_modules/",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*_SKIP_*"
    ]
}
